{% extends 'main.php' %}

{% block title %}My profile{% endblock %}

{% block bodyClass %}profile page-template row-79{% endblock %}

{% block content %}

    <section id="section-form" class="column-50 row-50">
            <div class="formHolder">
                <h3>My profile</h3>

                <div class="form-group">
                    <input type="text" name="email" placeholder="Enter your email" class="form-input" required>
                    <input type="text" name="login" placeholder="Enter your login" class="form-input" required>
                </div>

                <div class="form-group column-20">
                    <input type="password" name="password" placeholder="Enter your password" class="form-input" required>
                    <input type="password" name="password" placeholder="Confirm your password" class="form-input" required>
                </div>

                <div class="form-group column-20">
                    <input type="text" name="battletag" placeholder="Enter your battletag" class="form-input" required>
                    <input type="text" name="sr" placeholder="Enter your SR" class="form-input">
                </div>

                <div class="form-group">
                    <input type="file" name="avatar" id="avatar" class="form-input">
                </div>

                <div class="form-group button">
                    <button type="submit" id="saveButton" class="btn btn-sm btn-default simplebutton newAccButton">Save</button>
                </div>
            </div>

            
    </section>

{% endblock %}